 <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_trip"
        android:layout_height="match_parent"
        tools:context="pl.androidlist.androidlist.Fragments.TripFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/tripRowImageView"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@mipmap/ic_launcher" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow>
                        <TextView
                            android:text="Data wyjazdu: "
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:id="@+id/tripRowDepartureDate"
                            android:textSize="20sp"
                            android:textColor="#9999ff"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Data powrotu: "
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:id="@+id/tripRowReturnDate"
                            android:textSize="20sp"
                            android:textColor="#9999ff"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Cena: "
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:id="@+id/tripRowPrice"
                            android:textSize="20sp"
                            android:textColor="#9999ff"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Lokalizacja: "
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:id="@+id/tripRowLocation"
                            android:textSize="20sp"
                            android:textColor="#9999ff"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
