<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.androidlist.androidlist.Fragments.TripActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/tripRowImageView"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/photo_icon" />

        <TextView
            android:id="@+id/tripRowDepartureDate"
            android:layout_width="wrap_content"
            android:textSize="30sp"
            android:textColor="#9999ff"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tripRowImageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Podaj datę wyjazdu" />

        <TextView
            android:id="@+id/tripRowReturnDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#9999ff"
            android:textStyle="bold"
            android:layout_below="@+id/tripRowDepartureDate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Podaj datę powrotu" />

        <TextView
            android:id="@+id/tripRowPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#9999ff"
            android:textStyle="bold"
            android:layout_below="@+id/tripRowReturnDate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Podaj cenę" />

        <TextView
            android:id="@+id/tripRowLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tripRowPrice"
            android:textSize="30sp"
            android:textColor="#9999ff"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Dokąd jedziesz?" />
    </RelativeLayout>

</ScrollView>
