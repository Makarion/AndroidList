<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.androidlist.androidlist.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/obrazek"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/photo_icon" />

        <EditText
            android:id="@+id/dataWyjazdu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/obrazek"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:hint="Podaj datę wyjazdu"
            android:ems="10"
            />
        <EditText
            android:id="@+id/dataPowrotu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dataWyjazdu"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:hint="Podaj datę powrotu"
            android:ems="10"
            />
        <EditText
            android:id="@+id/cena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dataPowrotu"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:hint="Podaj cenę"
            android:ems="10"
            />
        <EditText
            android:id="@+id/lokalizacja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cena"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:hint="Dokąd jedziesz?"
            android:ems="10"
            />

    </RelativeLayout>

</ScrollView>
