<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.androidlist.androidlist.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/photo_icon" />

        <EditText
            android:id="@+id/departureDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:hint="Podaj datę wyjazdu"
            android:ems="10"
            />
        <EditText
            android:id="@+id/returnDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/departureDate"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:hint="Podaj datę powrotu"
            android:ems="10"
            />
        <EditText
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/returnDate"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:hint="Podaj cenę"
            android:ems="10"
            />
        <EditText
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:hint="Dokąd jedziesz?"
            android:ems="10"
            />

        <Button
        android:id="@+id/addTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@id/location"
        android:text="Dodaj wyjazd"
        android:textSize="10dp"
        android:ems="6"/>

        <Button
            android:id="@+id/showTrips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location"
            android:layout_marginTop="15dp"
            android:layout_alignRight="@id/location"
            android:text="Pokaż listę wyjazdów"
            android:textSize="10dp"
            android:ems="6"/>

    </RelativeLayout>

</ScrollView>
